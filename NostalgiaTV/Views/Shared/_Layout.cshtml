<!DOCTYPE html>
<html lang="en" class="overflow-hidden">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NostalgiaTV</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/video.js/dist/video-js.min.css" rel="stylesheet" />
    <link href="~/lib/@@videojs/themes/city/index.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/animations.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NostalgiaTV.styles.css" asp-append-version="true" />
</head>
<body class="mb-0 bg-black" data-barba="wrapper">
    <div class="container-fluid p-0">
        <main role="main" class="d-flex" style="height: 100dvh;">
            @RenderBody()
        </main>
    </div>
    <div class="crt-effect"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/gsap@3.12.7/dist/gsap.min.js"></script>
    <script src="~/assets/js/barba.js" asp-append-version="true" type="module"></script>
    <script src="~/lib/video.js/dist/video.min.js"></script>
    <script src="~/lib/videojs-playlist/dist/videojs-playlist.min.js"></script>
    <script src="~/lib/videojs-overlay/dist/videojs-overlay.min.js"></script>
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.min.js"></script>
    <script src="~/assets/js/player.js"></script>
    <script src="~/assets/js/script.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
